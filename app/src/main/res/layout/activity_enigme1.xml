<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/titre_enigme"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:text="TITRE"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/figure_optionelle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/question"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Ã©nigme" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/answer_attempt"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/submit_answer_btn"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:text="OK"
                android:textSize="15dp"/>


        </LinearLayout>


        <ImageView
            android:id="@+id/explication"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="35dp"
            app:srcCompat="@drawable/i_explication" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>